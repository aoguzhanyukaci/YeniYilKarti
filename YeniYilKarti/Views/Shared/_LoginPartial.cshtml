@using Microsoft.AspNet.Identity
@{ 
    string name = ViewBag.XYZ;

}
@if (Request.IsAuthenticated)
{

    <form action="/Account/LogOff" method="post" id="logoutForm" class="navbar-right">
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Merhaba " + name + " !", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    </form>


}
else
{
    <ul class="nav navbar-nav navbar-right ">
        <li>@Html.ActionLink(" Kayıt Ol ", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li> - </li>
        <li>@Html.ActionLink(" Giriş Yap ", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
