<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Yeni Yıl Kartı</title>
    <link href="~/image-picker/image-picker.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
    <link rel="icon" href="~/Image/yeniyilkarti.ico">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="@Url.Action("Index","Dashboard",new { area="Admin"},null)">Yeni Yıl Kartı</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item  @ViewBag.Don">
                    <a class="nav-link" href="@Url.Action("Index","Home",new { area=""},null)">Anasayfaya Dön</a>
                </li>
                <li class="nav-item @ViewBag.KartGoruntule">
                    <a class="nav-link " href="@Url.Action("Index","Dashboard",new { area="Admin"},null)">Kartları Görüntüle</a>
                </li>
                <li>
                    <a class="nav-link @ViewBag.KartEkle" href="@Url.Action("Index","Kartlar",new { area="Admin"},null)">Kart Ekle</a>
                </li>
            </ul>
            <div class="">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <hr />
    <footer class="footer-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <p class="footer-company-name">Tüm Hakları Saklıdır. &copy; 2021 <a href="#"> Yeni Yıl Kartı </a> Tasarlayan : <a href="https://oguzhanyukaci.com/"> Ali Rıza Oğuzhan Yukacı</a></p>
                </div>
            </div>
        </div>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/image-picker/image-picker.js"></script>
    <script src="~/Scripts/show.js"></script>
    <script>
        $(".image-picker").imagepicker();
    </script>
</body>
</html>